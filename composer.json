{
    "name": "msbcore/bengkel-management",
    "description": "Bengkel Management System - Professional Workshop Management",
    "type": "project",
    "version": "3.1.0",
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "classes/",
            "Config\\": "config/"
        },
        "files": [
            "includes/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "post-install-cmd": [
            "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); }\"",
            "@php -r \"echo 'Installation complete. Please configure your .env file.\\n';\"" 
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
